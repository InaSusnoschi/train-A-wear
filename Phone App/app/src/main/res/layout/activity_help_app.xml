<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/geom4"
    tools:context=".HelpApp">

    <TextView
        android:id="@+id/textHowHelp"
        android:layout_marginTop="60dp"
        android:text="@string/text_help_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textSize="28sp"
        android:typeface="normal"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:id="@+id/faultLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingRight="25dp"
        android:paddingLeft="25dp"
        android:paddingBottom="20dp"
        android:background="@drawable/shape"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/textHowHelp">

        <TextView
            android:id="@+id/textFault"
            android:layout_marginTop="20dp"
            android:text="@string/text_fault_head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="normal" />

        <TextView
            android:id="@+id/textFaultBody"
            android:layout_marginTop="40dp"
            android:text="@string/text_fault_body"
            android:justificationMode="inter_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:typeface="normal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mountLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingRight="25dp"
        android:paddingLeft="25dp"
        android:paddingBottom="20dp"
        android:background="@drawable/shape"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/textHowHelp">

        <TextView
            android:id="@+id/textMount"
            android:layout_marginTop="40dp"
            android:text="@string/button_mount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="normal" />

        <TextView
            android:id="@+id/textMountBody"
            android:layout_marginTop="40dp"
            android:text="@string/text_mount_body"
            android:justificationMode="inter_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:typeface="normal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/stretchLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingRight="25dp"
        android:paddingLeft="25dp"
        android:paddingBottom="20dp"
        android:background="@drawable/shape"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/textHowHelp">

        <TextView
            android:id="@+id/textStretchH"
            android:layout_marginTop="40dp"
            android:text="@string/button_stretch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="normal" />

        <RelativeLayout
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorGreyLight"
            android:layout_gravity="center"
            tools:context=".ClassicSquat">

            <com.synnapps.carouselview.CarouselView
                android:id="@+id/carouselStr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:pageColor="@color/colorGreyLight"
                app:fillColor="@color/colorNavy"
                app:slideInterval="4000"
                app:radius="6dp"
                app:strokeColor="@color/colorPrimaryDark"
                app:strokeWidth="1dp"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/healthLayout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingRight="25dp"
        android:paddingLeft="25dp"
        android:paddingBottom="20dp"
        android:background="@drawable/shape"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/textHowHelp">

        <TextView
            android:id="@+id/textHealth"
            android:layout_marginTop="40dp"
            android:text="@string/button_health"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="normal" />

        <TextView
            android:id="@+id/textHealthBody"
            android:layout_marginTop="40dp"
            android:text="@string/text_health_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:typeface="normal" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutHelpButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="30dp"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        app:layout_constraintTop_toBottomOf="@id/textHowHelp">

        <Button
            android:id="@+id/buttonFault"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="20dp"
            android:alpha="0.8"
            android:textColor="#000000"
            android:text="@string/text_fault_head" />
        <Button
            android:id="@+id/buttonMount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="20dp"
            android:alpha="0.8"
            android:textColor="#000000"
            android:text="@string/button_mount" />
        <Button
            android:id="@+id/buttonStretch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="20dp"
            android:alpha="0.8"
            android:textColor="#000000"
            android:text="@string/button_stretch" />
        <Button
            android:id="@+id/buttonHealth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:textSize="20dp"
            android:alpha="0.8"
            android:textColor="#000000"
            android:text="@string/button_health" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonExitHelp"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/exitcircle"
        android:visibility="gone"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="X"
        android:textSize="25dp"
        android:textColor="#000000" />

</android.support.constraint.ConstraintLayout>