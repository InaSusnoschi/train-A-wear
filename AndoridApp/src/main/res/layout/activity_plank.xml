<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/geom2"
    tools:context=".vs.Plank">

    <ImageView
        android:id="@+id/imagePlank"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/planklow1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:paddingTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/imageLunge">

        <Button
            android:id="@+id/buttonStartPlank"
            style="@style/STARTbutton"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="30dp"
            android:text="@string/button_exercise_start"
            android:textSize="16sp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/buttonInstrPlank"
            style="@style/STARTbutton"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="40dp"
            android:text="@string/button_instructions"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>